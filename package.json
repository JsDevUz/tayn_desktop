{
  "name": "tayn-pos-desktop",
  "version": "1.0.0",
  "description": "TAYN POS Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "nodemon --exec electron . --watch src/main",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:main": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "pos",
    "desktop",
    "offline"
  ],
  "author": "TAYN Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^3.0.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "axios": "^1.4.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.0.0",
    "knex": "^2.4.0",
    "pg": "^8.11.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot": "^0.0.1",
    "react-hotkeys": "^2.0.0",
    "react-hotkeys-hook": "^5.2.4"
  },
  "build": {
    "appId": "com.tayn.pos.desktop",
    "productName": "TAYN POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
